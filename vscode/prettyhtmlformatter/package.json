{
	"name": "vscode-gformat-html",
	"displayName": "Global HTML Formatter (gformat-html)",
	"description": "HTML formatter using gformat-html",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:html"
	],
	"capabilities": {
		"documentFormattingProvider": "true"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "%ext.config.title%",
			"properties": {
				"gformathtml.usePrettier": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "%ext.config.userPrettier%",
					"scope": "resource"
				},
				"gformathtml.sortAttributes": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "%ext.config.sortAttributes%",
					"scope": "resource"
				},
				"gformathtml.forceWrapAttributes": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "%ext.config.forceWrapAttributes%",
					"scope": "resource"
				},
				"gformathtml.singleQuote": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "%ext.config.singleQuote%",
					"scope": "resource"
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vsce": "^1.74.0",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"gformat-html": "^0.1.0"
	}
}
