{
	"name": "html-formatter",
	"displayName": "Global HTML Formatter (gformat-html)",
	"description": "HTML formatter using gformat-html",
	"publisher": "gformat",
	"version": "0.0.1",
	"icon": "g-letter.jpg",
	"scripts": {
		"compile": "webpack --mode production",
		"vscode:publish": "vsce package && vsce publish",
		"tsc": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:html"
	],
	"capabilities": {
		"documentFormattingProvider": "true"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "%ext.config.title%",
			"properties": {
				"gformathtml.usePrettier": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "%ext.config.userPrettier%",
					"scope": "resource"
				},
				"gformathtml.sortAttributes": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "%ext.config.sortAttributes%",
					"scope": "resource"
				},
				"gformathtml.forceWrapAttributes": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "%ext.config.forceWrapAttributes%",
					"scope": "resource"
				},
				"gformathtml.singleQuote": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "%ext.config.singleQuote%",
					"scope": "resource"
				}
			}
		}
	},
	"main": "./dist/extension.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alexmarucci/gformat-html"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"babel-loader": "^8.0.6",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"json-loader": "^0.5.7",
		"mocha": "^7.1.0",
		"ts-loader": "^6.2.1",
		"typescript": "^3.7.5",
		"vsce": "^1.74.0",
		"vscode-test": "^1.3.0",
		"webpack": "^4.42.0",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"gformat-html": "^0.1.0",
		"html-whitespace-sensitive-tag-names": "^1.0.1"
	}
}
